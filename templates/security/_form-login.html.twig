<div class="row m-0">
    <h2 class="form-padding m-auto">Connexion</h2>
</div>
<form method="post" action="{{ path("login") }}">
    <div class="row">
        <div class="offset-0 col-12 offset-md-2 col-md-8 form-group">
            <label for="username" class="text-purple">Email</label>
            <input type="email" id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="Votre adresse mail ..."
                   required>
        </div>
    </div>
    <div class="row">
        <div class="offset-0 col-12 offset-md-2 col-md-8 form-group">
            <label for="password" class="text-purple">Mot de passe</label>
            <input type="password" id="password" name="_password" class="form-control" placeholder="Votre mot de passe ..."
                   required>
        </div>
    </div>
    <div class="row">
        <div class="offset-0 col-12 offset-md-2 col-md-8 text-center text-purple pb-3">
            <a class="link-forgot-password" href="#">Mot de passe oublié ?</a>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-8 offset-md-2 col-md-4 py-2">
            <button class="col-12 btn-sm bg-button-purple text-white border-0">Se connecter</button>
        </div>
        <div class="offset-2 col-8 offset-md-0 col-md-4 py-2">
            <div class="col-12 text-center btn-sm bg-button-purple">
                <a href="{{ path('register') }}" class=" text-white border-0" style="width:100%">Crée un
                    compte</a>
            </div>
        </div>
    </div>
</form>