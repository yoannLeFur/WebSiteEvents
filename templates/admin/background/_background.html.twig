<div class="table-responsive">
    <table class="table table-striped m-0">
        <thead class="text-center">
        <tr>
            <th scope="col">#</th>
            <th scope="col">titre</th>
            <th scope="col">Description</th>
            <th scope="col" colspan="2">
                {% if backgrounds | length < 1 %}
                    <div class="text-center btn-admin bg-button-purple">
                        <a href="{{ path('admin.background.new') }}" class=" text-white border-0" style="width:100%"><i
                                    class="fa fa-plus pt-1" aria-hidden="true"></i></a>
                    </div>
                {% endif %}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for background in backgrounds %}
            <tr>
                <th scope="row">{{ background.id }}</th>
                <td>{{ background.title }}</td>
                <td class="d-inline-block text-truncate"
                    style="max-width: 400px;">{{ background.description }}</td>
                <td>
                    <div class="d-flex flex-row">
                        <div class="text-center ">
                            <a href="{{ path('admin.background.show', {id: background.id, slug: background.slug}) }}"
                               class="btn btn-admin bg-button-purple text-white border-0">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                        </div>
                        <div class="text-center mx-1">
                            <a href="{{ path('admin.background.edit', {id: background.id}) }}"
                               class="btn btn-admin bg-button-purple text-white border-0"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        </div>
                        <div class="text-center">
                            <form method="post" action="{{  path('admin.background.delete', {id: background.id}) }}" style="width:100%" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette section?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ background.id) }}">
                                <button class="btn btn-admin bg-button-purple text-white border-0 m-0 p-0"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>